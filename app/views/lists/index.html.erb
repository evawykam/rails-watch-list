<div class="row row-cols-3 g-4">
  <% @lists.each do |list| %>
    <div class="col">
      <div class="card">
          <% bookmark = list.bookmarks.sample %>
          <% if bookmark.present?  %>

            <%= image_tag bookmark.movie.poster_url, class: "card-img-top img-fluid img-thumbnail", alt: "movie poster" %>
          <% else %>
            <%= image_tag "https://images.unsplash.com/photo-1532630571098-79a3d222b00d?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1676&q=80", alt: "poster image", class: "card-img-top" %>
          <% end %>

      <div class="card-body">
        <h5 class="card-title"><%=list.name %></h5>
      </div>

          <%= link_to 'Show', list %>
          <%= link_to 'Edit', edit_list_path(list) %>
          <%= link_to 'Remove the list', list, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  <% end %>
</div>
<br>

<%= link_to 'Add new list', new_list_path %>

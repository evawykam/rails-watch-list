<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= list_path %>);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="row container">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="col-4">
    <div>
      <!-- <img src="" alt=""> -->
      <%= image_tag bookmark.movie.poster_url, class: "img-fluid", alt: "alttext" %>
      <!-- <div class= "img-fluid" style="object-fit:cover; width: 100%; height: 300px; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= bookmark.movie.poster_url %>')"> -->
      <%= bookmark.comment %>
      <%= link_to "remove bookmark", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
    </div>

  </div>

  <% end %>
</div>

<div class="col-4 mt-5">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.input :movie_id, collection: Movie.all %>
    <%= f.submit "add bookmark" %>
  <% end %>

</div>
